<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">
  <android.support.design.widget.FloatingActionButton
      android:id="@+id/favorite_recipe_remove_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginEnd="32dp"
      android:clickable="true"
      android:src="@drawable/ic_delete_white"
      android:visibility="invisible"
      app:backgroundTint="@color/colorPrimary"
      app:fabSize="normal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/favorite_recipe_undo_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="32dp"
      android:layout_marginRight="24dp"
      android:clickable="true"
      android:src="@drawable/ic_undo"
      android:visibility="invisible"
      app:backgroundTint="@color/colorPrimary"
      app:fabSize="normal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/favorite_recipe_remove_btn"/>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/fragment_favorite_recipe_frame"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:background="@color/colorAccent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">
  </android.support.v7.widget.RecyclerView>

  <include
      layout="@layout/empty_text"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</android.support.constraint.ConstraintLayout>
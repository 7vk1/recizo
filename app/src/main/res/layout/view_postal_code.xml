<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:text="郵便番号"
      android:textSize="20sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/textView14"/>
  <EditText
      android:visibility="invisible"
      android:textSize="40sp"
      android:id="@+id/et"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="2"
      app:layout_constraintRight_toRightOf="@+id/postal_code"
      app:layout_constraintTop_toTopOf="@+id/postal_code"/>
  <EditText
      android:textSize="40sp"
      android:id="@+id/postal_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="4"
      android:maxLength="8"
      android:digits="01234567890"
      android:inputType="number"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginTop="8dp"
      app:layout_constraintTop_toBottomOf="@+id/textView14"/>
  <TextView
      android:id="@+id/tv_size"
      android:visibility="invisible"
      app:layout_constraintRight_toLeftOf="@id/et"
      app:layout_constraintTop_toTopOf="@+id/postal_code"
      app:layout_constraintBottom_toBottomOf="@+id/postal_code"
      android:text="0"
      android:textSize="40sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      android:textAlignment="center"
      android:background="#fff"
      android:text="-"
      android:textSize="40sp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="@+id/tv_size"
      app:layout_constraintLeft_toLeftOf="@+id/tv_size"
      app:layout_constraintTop_toTopOf="@+id/postal_code"
      app:layout_constraintBottom_toBottomOf="@+id/postal_code"
      android:id="@+id/textView16"/>
</android.support.constraint.ConstraintLayout>